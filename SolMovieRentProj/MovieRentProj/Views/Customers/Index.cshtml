@model IEnumerable<MovieRentProj.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if(!Model.Any())
{
    <text>We don't have any customers yet.</text>
}
else
{
    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var customers in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customers.Name, "Edit","Customers", new { id = customers.Id },null )</td>
                        <td>@customers.MembershipType.Name</td>
                    </tr>
                }
        </tbody>
    </table>
}

